{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "version": 3,
  "final_space": true,

  "blocks": [
    {
      "//": "LEFT PROMPT — diamond chain with rounded start and pointed end",
      "type": "prompt",
      "alignment": "left",
      "newline": false,
      "segments": [
        {
          "type": "path",
          "style": "diamond",
          "leading_diamond": "",
          "trailing_diamond": "",
          "foreground": "#ffffff",
          "background": "#61AFEF",
          "template": " {{ .Path }} "
        },
        {
          "type": "git",
          "style": "diamond",
          "leading_diamond": "",
          "trailing_diamond": "",
          "foreground": "#ffffff",
          "background": "#98C379",
           "background_templates": [
              "{{ if or (.Working.Changed) (.Working.Untracked) (.Staging.Changed) (gt .Ahead 0) (gt .Behind 0) }}#E5C07B{{ end }}"
            ],
          "template": " {{ .HEAD }}{{ if and (eq .Ahead 0) (eq .Behind 0) }} ≡{{ end }}{{ if gt .Ahead 0 }} ⇡{{ .Ahead }}{{ end }}{{ if gt .Behind 0 }} ⇣{{ .Behind }}{{ end }}{{ if .Working.Changed }} ~{{ .Working.Modified }} -{{ .Working.Deleted }}{{ if .Working.Unmerged }} !{{ .Working.Unmerged }}{{ end }}{{ end }} ",
          "properties": {
            "fetch_status": true,
            "fetch_upstream_icon": true
          }
        }
      ]
    },

    {
      "//": "RIGHT PROMPT — cert.omp.json style pills, aligned right on same line",
      "type": "prompt",
      "alignment": "right",
      "overflow": "hide",
      "segments": [
        {
          "//": "Kubernetes pill — first, rounded left (E0B6) and pixel right (E0C6)",
          "type": "kubectl",
          "style": "diamond",
          "leading_diamond": "\uE0B6",
          "trailing_diamond": "\uE0C6",
          "background": "#C8C8C8",
          "foreground": "#000000",
          "template": " 󱃾 {{ .Context }}{{ if .Namespace }}/{{ .Namespace }}{{ end }} "
        },
        {
          "//": "Terraform pill — middle, pixel-to-pixel connector",
          "type": "terraform",
          "style": "diamond",
          "leading_diamond": "\uE0C7",
          "trailing_diamond": "\uE0C6",
          "background": "#E5C07B",
          "foreground": "#000000",
          "template": " 󱚣 {{ .WorkspaceName }} "
        },
        {
          "//": "AWS pill — middle, pixel-to-pixel connector",
          "type": "aws",
          "style": "diamond",
          "leading_diamond": "\uE0C7",
          "trailing_diamond": "\uE0C6",
          "background": "#FFA400",
          "foreground": "#ffffff",
          "template": "  {{ .Profile }}{{ if .Region }}@{{ .Region }}{{ end }} "
        },
        {
          "type": "python",
          "style": "diamond",
          "leading_diamond": "\uE0C7",
          "trailing_diamond": "\uE0C6",
          "foreground": "#100E23",
          "background": "#906CFF",
          "properties": {
            "display_mode": "version",
            "fetch_virtual_env": true,
            "fetch_virtual_env_dir": false,
            "home_enabled": false
          },
          "template": "{{ if .Venv }}  {{ .Full }} {{ end }}"
        }
      ]
    },

    {
      "//": "SECOND LINE — user input prompt",
      "type": "prompt",
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "type": "text",
          "style": "plain",
          "foreground": "#98C379",
          "template": "❯ "
        }
      ]
    }
  ]
}
